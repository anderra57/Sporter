<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.login.LoginCreateTeam">

    <ImageView
        android:id="@+id/login_create_team_banner"
        android:layout_width="337dp"
        android:layout_height="225dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103"
        app:srcCompat="@drawable/sporter_text" />

    <EditText
        android:id="@+id/login_create_team_txt_name"
        android:layout_width="261dp"
        android:layout_height="60dp"
        android:ems="4"
        android:hint="@string/login_enter_name"
        android:textAlignment="center"
        tools:ignore="Autofill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375" />

    <EditText
        android:id="@+id/login_create_team_txt_pass"
        android:layout_width="261dp"
        android:layout_height="60dp"
        android:ems="4"
        android:hint="@string/login_enter_pass"
        android:textAlignment="center"
        tools:ignore="Autofill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475" />

    <Button
        android:id="@+id/login_create_team_btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRegister"
        android:text="@string/login_register_team"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_create_team_btn_img" />

    <TextView
        android:id="@+id/login_create_team_txt_warning"
        android:layout_width="310dp"
        android:layout_height="62dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578" />


    <ImageView
        android:id="@+id/login_create_team_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/default_icon_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_create_team_txt_warning" />

    <Button
        android:id="@+id/login_create_team_btn_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="openGallery"
        android:text="@string/login_choose_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_create_team_img" />

    <Button
        android:id="@+id/login_create_team_btn_x"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-6dp"
        android:onClick="clickX"
        android:text="X"
        app:layout_constraintStart_toEndOf="@+id/login_create_team_img"
        app:layout_constraintTop_toTopOf="@+id/login_create_team_img"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>